            43, 47, 53, 59, 61, 67, 71, 73, 79, 83, 89, 97, 101};
        for (int a = 2; a <= 30; a++) {
            for (int i = 0; i < primes.length; i++) {
                int p = primes[i];
                BigInteger bigA = new BigInteger(((Integer)a).toString());
                BigInteger bigP = new BigInteger(((Integer)p).toString());
                if ((bigA.modPow(bigP, bigP)).equals(new BigInteger(((Integer)1).toString())))
                    System.out.println(a + ", " + p);
            }
        }
    }
    
