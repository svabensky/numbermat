        if (pdfLaTeXFile != null) {
            setFileRadioButton.setSelected(true);
            setFile(true);
            setFilePath.setText(pdfLaTeXFile.getAbsolutePath());
        }
        final File pdfExportFolder = Config.getPDFExportFolder();
        if (pdfExportFolder != null) {
            setOutFolderRadioButton.setSelected(true);
            setOutFolder(true);
            setOutFolderPath.setText(pdfExportFolder.getAbsolutePath());
        }
    }
    
