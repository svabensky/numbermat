        setFile(true);
        okButton.setEnabled(false);
    }//GEN-LAST:event_setFileRadioButtonActionPerformed

    private void defaultFileRadioButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_defaultFileRadioButtonActionPerformed
        setFile(false);
        setFilePath.setText(null);
        if ((!setOutFolderRadioButton.isSelected()) || (!setOutFolderPath.getText().isEmpty()))
            okButton.setEnabled(true);
    }//GEN-LAST:event_defaultFileRadioButtonActionPerformed

    private void setFileButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_setFileButtonActionPerformed
        final JFileChooser fc = new JFileChooser();
        fc.setFileSelectionMode(JFileChooser.FILES_ONLY);
        fc.setDialogTitle("Zvolte spustitelný soubor pro překlad PDFLaTeXem");
        
        // Add filter to accept only .exe files on Windows
        if (System.getProperty("os.name").contains("Windows")) {
            final FileNameExtensionFilter filter = new FileNameExtensionFilter(
                    "Spustitelné soubory", "exe");
            fc.setFileFilter(filter);
        }
        
        final int returnVal = fc.showOpenDialog(SettingsFrame.this);
        if (returnVal == JFileChooser.APPROVE_OPTION) {
            final File pdfLaTeXFile = fc.getSelectedFile();
            setFilePath.setText(pdfLaTeXFile.getAbsolutePath());
            okButton.setEnabled(true);
        }
    }//GEN-LAST:event_setFileButtonActionPerformed

    private void okButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_okButtonActionPerformed
        final Preferences preferences = MainFrame.getPreferences();
        if (defaultFileRadioButton.isSelected()) {
            preferences.put("pathToPDFLaTeXFile", Config.DEFAULT);
            Config.setPDFLaTeXFile(null);
        } else {
            preferences.put("pathToPDFLaTeXFile", setFilePath.getText());
            Config.setPDFLaTeXFile(new File(setFilePath.getText()));
        }
        
        if (defaultOutFolderRadioButton.isSelected()) {
            preferences.put("pathToPDFExportFolder", Config.DEFAULT);
            Config.setPDFExportFolder(null);
        } else {
            preferences.put("pathToPDFExportFolder", setOutFolderPath.getText());
            Config.setPDFExportFolder(new File(setOutFolderPath.getText()));
        }
        
        this.dispatchEvent(new WindowEvent(this, WindowEvent.WINDOW_CLOSING));
    }//GEN-LAST:event_okButtonActionPerformed

    private void defaultOutFolderRadioButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_defaultOutFolderRadioButtonActionPerformed
        setOutFolder(false);
        setOutFolderPath.setText(null);
        if ((!setFileRadioButton.isSelected()) || (!setFilePath.getText().isEmpty()))
            okButton.setEnabled(true);
    }//GEN-LAST:event_defaultOutFolderRadioButtonActionPerformed

    private void setOutFolderRadioButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_setOutFolderRadioButtonActionPerformed
        setOutFolder(true);
        okButton.setEnabled(false);
    }//GEN-LAST:event_setOutFolderRadioButtonActionPerformed

    private void setOutFolderButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_setOutFolderButtonActionPerformed
        final JFileChooser fc = new JFileChooser();
        fc.setFileSelectionMode(JFileChooser.DIRECTORIES_ONLY);
        fc.setDialogTitle("Zvolte výstupnou složku");

        final int returnVal = fc.showOpenDialog(SettingsFrame.this);
        if (returnVal == JFileChooser.APPROVE_OPTION) {
            final File pdfExportFolder = fc.getSelectedFile();
            setOutFolderPath.setText(pdfExportFolder.getAbsolutePath());
            okButton.setEnabled(true);
        }
    }//GEN-LAST:event_setOutFolderButtonActionPerformed

