                break;
                
            case Configuration.BEZOUT:
                texts.add("Nezáporné celé číslo");
                texts.add("Nezáporné celé číslo");
                prepareParameters(2, texts);
                break;
                
            case Configuration.INVERSE_MOD:
                texts.add("Kladné celé číslo");
                texts.add("Kladné celé číslo");
                prepareParameters(2, texts);
                break;
                
            case Configuration.EULER_PHI:
                texts.add("Nezáporné celé číslo");
                prepareParameters(1, texts);
                break;
                
            case Configuration.LINEAR_CONGRUENCE:
                texts.add("Celé číslo");
