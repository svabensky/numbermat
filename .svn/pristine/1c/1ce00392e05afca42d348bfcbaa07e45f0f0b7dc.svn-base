    private void generateWithParametersButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_generateWithParametersButtonActionPerformed
        mathProblem = null;
        resetProblemPart();
        List<Integer> params;
        
        switch (getSelectedProblemIndex()) {
            case Configuration.GCD: {
                params = UserInputChecker.checkIntegerParameters(2, parameterArray, this);
                if (!params.isEmpty())
                    mathProblem = new GCDProblem(params.get(0), params.get(1));
                break;
            }
            case Configuration.BEZOUT: {
                params = UserInputChecker.checkNonNegativeParameters(2, parameterArray, this);
                if (!params.isEmpty())
                    mathProblem = new BezoutProblem(params.get(0), params.get(1));
                break;
            }
            case Configuration.INVERSE_MOD: {
                params = UserInputChecker.checkCoprimeParameters(2, parameterArray, this);
                if (!params.isEmpty())
                    mathProblem = new InverseModProblem(params.get(0), params.get(1));
                break;
            }
            case Configuration.EULER_PHI: {
                Integer n = UserInputChecker.positiveNumberInput(parameter1, this);
                if (n != null)
                    mathProblem = new EulerPhiProblem(n);
                break;
            }
            case Configuration.LINEAR_CONGRUENCE: {
                params = UserInputChecker.linearCongruenceNumberInput(parameterArray, this);
                if (!params.isEmpty())
                    mathProblem = new LinearCongruenceProblem(params.get(0), params.get(1), params.get(2));
                break;
            }
            case Configuration.LINEAR_CONGRUENCE_SYSTEM: {
                Integer count = UserInputChecker.numberInput(parameter1, this, 1, 4, false);
                if (count == null)
                    break;
                List<Integer> aList = UserInputChecker.numberListInput(count, parameter2, this, Configuration.MIN_INT, true, "Pole musí obsahovat jenom celá čísla.");
                List<Integer> bList = UserInputChecker.numberListInput(count, parameter3, this, Configuration.MIN_INT, true, "Pole musí obsahovat jenom celá čísla.");
                List<Integer> nList = UserInputChecker.numberListInput(count, parameter4, this, 1, false, "Pole musí obsahovat jenom kladná čísla.");
                if ((!aList.isEmpty()) && (!bList.isEmpty()) && (!nList.isEmpty())) {
                    mathProblem = new LinearCongruenceSystemProblem(count, aList, bList, nList);
                }
                break;
            }
            case Configuration.UNIT_GROUP_ELEMENT_ORDER: {
                params = UserInputChecker.checkCoprimeParameters(2, parameterArray, this, true);
                if (!params.isEmpty())
                    mathProblem = new UnitGroupElementOrderProblem(params.get(0), params.get(1));
                break;
            }   
        }
        if (mathProblem != null)
            start();
    }//GEN-LAST:event_generateWithParametersButtonActionPerformed

