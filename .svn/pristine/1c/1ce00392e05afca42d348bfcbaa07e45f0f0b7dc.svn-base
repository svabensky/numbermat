    private void prepareParameters(int count, List<String> texts) {
        for (int i = 0; i < count; ++i) {
            parameterLabelArray[i].setEnabled(true);
            parameterArray[i].setEnabled(true);
            parameterArray[i].setText(texts.get(i));
        }
    }
    
